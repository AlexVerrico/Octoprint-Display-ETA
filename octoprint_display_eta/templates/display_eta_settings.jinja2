<form class="form-horizontal">
    <h3>Settings:</h3>
    <div class="control-group">
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: format.nosemicolon" id="settings-nosemicolon"> Remove the semicolon from the time (Required for certain printer firmwares)
            </label>
        </div>
        <div class="controls">
            <label class="checkbox">
                <input type="checkbox" data-bind="checked: settings.plugins.display_eta.time24hr" id="settings-24hr"> Display time in 24hr format
            </label>
        </div>
    </div>
</form>